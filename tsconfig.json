{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "target": "ES5",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "declaration": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.*",
    "src/**/*.stories.*"
  ]
}